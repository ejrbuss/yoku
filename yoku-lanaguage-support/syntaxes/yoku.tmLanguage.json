{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "yoku",
	"patterns": [
		{
			"name": "string.yoku",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.yoku",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "constant.language.yoku",
			"match": "\\b(true|false)\\b"
		},
		{
			"name": "constant.numeric.yoku",
			"match": "-?(0b[01_]+|0o[01234567_]+|0x[\\dabcdefABCDEF_]+|\\d[\\d_]*(\\.[\\d_]+)?(e-?[\\d_]+)?)"
		},
		{
			"name": "keyword.yoku",
			"match": "\\b(import|export|module|as|var|const|proc|struct|enum|type|impl|if|else|match|do|loop|break|continue|while|for|in|return|try|throw|test|assert)\\b"
		},
		{
			"name": "comment.block",
			"begin": "---",
			"end": "---"
		},
		{
			"name": "comment.line",
			"begin": "--",
			"end": "\n"
		},
		{
			"name": "variable",
			"match": "\\b(\\w+)\\b"
		}
	],
	"scopeName": "source.yoku"
}